[Unit]
Description=Noise Detector Email Report
After=network.target

[Service]
Type=oneshot
WorkingDirectory=/home/prouty/projects/noisedetector
ExecStart=/usr/bin/python3 /home/prouty/projects/noisedetector/email_report.py
User=prouty

# Capture output to systemd journal
StandardOutput=journal
StandardError=journal

# Environment variables (can override config.json)
Environment="PYTHONUNBUFFERED=1"

[Install]
WantedBy=multi-user.target

